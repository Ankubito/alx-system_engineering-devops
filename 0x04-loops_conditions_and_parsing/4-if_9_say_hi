#!/usr/bin/env bash

# This script displays "Best School" 10 times.
# On the 9th iteration, it displays "Best School" and then "Hi" on a new line.

num=0

while [ $num -lt 10 ]; do
    if [ $num -eq 9 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    ((num++))
done
